---
apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: acme-issuer
  namespace: cert-manager
spec:
  acme:
    email: [[ acme_email ]]
    server: [[ acme_directory ]]
    privateKeySecretRef:
        name: acme-account-key
    solvers:
    - dns01:
        acmeDNS:
          host: [[ acme_acme_dns_server ]]
          accountSecretRef:
            name: acme-dns-credentials
            key: acmedns.json
